        </activity>
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.fragment.RegistActivity" />
        <activity android:name=".view.fragment.LoginActivity" />
        <activity android:name=".view.fragment.UserActivity" />
        <activity android:name=".view.fragment.FindPassActivity" />
