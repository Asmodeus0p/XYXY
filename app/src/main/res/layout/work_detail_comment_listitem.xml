<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ts_20"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_marginRight="@dimen/ts_12"
        android:layout_height="wrap_content">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/work_detail_comment_listitem_img"
            android:layout_width="@dimen/ts_40"
            app:riv_oval="true"
            android:layout_height="@dimen/ts_40" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_10"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/work_detail_comment_listitem_name"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_14"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/work_detail_comment_listitem_usertype"
                        android:layout_width="@dimen/ts_22"
                        android:layout_height="@dimen/ts_22" />
                </LinearLayout>


                <TextView
                    android:id="@+id/work_detail_comment_listitem_time"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_12"
                    android:textColor="@color/gray"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/work_detail_comment_listitem_atname"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_14"
                    android:visibility="gone"
                    android:textColor="@color/blue_arlt"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/work_detail_comment_listitem_content"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/ts_14"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/work_detail_comment_listitem_replyNum"
                    android:layout_width="wrap_content"
                    android:paddingTop="@dimen/ts_5"
                    android:paddingBottom="@dimen/ts_5"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/ts_10"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/ts_12"
                    android:textColor="@color/blue_arlt"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/work_detail_comment_listitem_comment"
                        android:layout_width="wrap_content"
                        android:text="回复"
                        android:padding="@dimen/ts_5"
                        android:textColor="@color/blue_arlt"
                        android:layout_marginRight="@dimen/ts_10"
                        android:textSize="@dimen/ts_12"
                        android:layout_height="wrap_content" />


                    <CheckBox
                        android:id="@+id/work_detail_comment_listitem_praise_cb"
                        android:layout_width="wrap_content"
                        android:button="@drawable/detail_praise_check_bg"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:paddingLeft="@dimen/ts_4"
                        android:textSize="@dimen/ts_12"
                        android:textColor="@drawable/praise_check_tv_bg"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        style="@style/login_line_style"
        android:layout_height="@dimen/ts_1" />

</LinearLayout>