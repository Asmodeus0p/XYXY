<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingRight="@dimen/ts_8"
    android:paddingLeft="@dimen/ts_8"
    android:paddingTop="@dimen/ts_8"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/ts_162"
        android:orientation="vertical"
        android:layout_height="@dimen/ts_145">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="@dimen/ts_162"
                    android:layout_height="@dimen/ts_92" >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/masterlistaty_listitem_img"
                    android:layout_width="@dimen/ts_162"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/ts_92" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/ts_5"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/masterlistaty_listitem_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/masterlistaty_listitem_usertype"
                            android:layout_width="@dimen/ts_22"
                            android:layout_height="@dimen/ts_22" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/masterlistaty_listitem_intro"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_12"
                        android:textColor="#999999"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>