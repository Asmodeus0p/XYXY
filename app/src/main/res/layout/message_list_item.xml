<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts_78">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/ts_12"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/message_listitem_typeimg"
                android:layout_width="@dimen/ts_38"
                android:src="@mipmap/message_attention"
                android:layout_height="@dimen/ts_38" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/ts_10"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/message_listitem_title"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_16"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/message_listitem_flag"
                        android:layout_width="wrap_content"
                        android:text="官方"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/ts_5"
                        android:paddingLeft="@dimen/ts_5"
                        android:visibility="gone"
                        android:paddingRight="@dimen/ts_5"
                        android:paddingTop="@dimen/ts_2"
                        android:paddingBottom="@dimen/ts_2"
                        android:textSize="@dimen/ts_14"
                        android:background="@drawable/button_blue_bg_active"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:id="@+id/message_listitem_newimg"
                        android:layout_width="@dimen/ts_8"
                        android:layout_marginLeft="@dimen/ts_6"
                        android:visibility="invisible"
                        android:src="@mipmap/new_message"
                        android:layout_height="@dimen/ts_8" />

                </LinearLayout>

                <TextView
                    android:id="@+id/message_listitem_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_12"
                    android:textColor="@color/gray"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/ts_8"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_height="@dimen/ts_1" />


        <TextView
            android:id="@+id/message_listitem_time"
            android:layout_width="wrap_content"
            android:textSize="@dimen/ts_12"
            android:textColor="@color/gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_marginTop="@dimen/ts_22"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>