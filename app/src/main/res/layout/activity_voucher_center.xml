<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/recharge_center_aty_group"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recharge_center_aty_bottom"
        android:layout_width="wrap_content"
        android:text="温馨提示：请在网络状态良好的环境下充值。"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/ts_12"
        android:textSize="@dimen/ts_12"
        android:textColor="@color/gray"
        android:layout_marginBottom="@dimen/ts_12"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/recharge_center_aty_bottom"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/ts_26"
            android:layout_height="@dimen/ts_44">

            <TextView
                android:id="@+id/recharge_center_aty_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/cancle_bg_style" />

            <TextView
                android:layout_width="wrap_content"
                android:text="充值中心"
                android:textSize="@dimen/ts_18"
                android:textColor="@color/blue_arlt"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/recharge_center_aty_zhangdan"
                android:layout_width="wrap_content"
                android:text="账单"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_14"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/sp_12"
                android:gravity="center"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/ts_1" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:background="@color/gray_f6"
            android:layout_height="@dimen/dp_10" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_48">


            <TextView
                android:layout_width="wrap_content"
                android:text="账号:"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_centerVertical="true"
                style="@style/home_myself_list_tv_style"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/recharge_center_aty_zhanghao_tv"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/blue_arlt"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/ts_1" />


        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_48">


            <TextView
                android:layout_width="wrap_content"
                android:text="余额:"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_centerVertical="true"
                style="@style/home_myself_list_tv_style"
                android:layout_height="wrap_content" />


            <TextView
                android:text="0"
                android:id="@+id/recharge_center_aty_yue_tv"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/blue_arlt"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="@color/gray_f6"
            android:layout_height="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/gray"
            android:text="请选择充值金额"
            android:textSize="@dimen/ts_12"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recharge_center_aty_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</RelativeLayout>