<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingRight="@dimen/ts_8"
    android:paddingLeft="@dimen/ts_8"
    android:paddingBottom="@dimen/ts_16"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_master_live_group"
        android:layout_width="match_parent"
        android:background="@drawable/home_master_live_bg"
        android:orientation="horizontal"
        android:layout_height="@dimen/ts_72">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/ts_10"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/ts_22"
                android:src="@mipmap/home_master_live_shape"
                android:layout_height="@dimen/ts_22" />

            <TextView
                android:text="正在直播"
                android:textSize="@dimen/ts_12"
                android:layout_marginTop="@dimen/ts_4"
                android:textColor="#E5BA23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/ts_10"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_masterlive_listitem_title"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/ts_4"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/home_masterlive_listitem_name"
                    android:textColor="@color/login_close_c"
                    android:textSize="@dimen/ts_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/home_masterlive_listitem_usertype"
                    android:layout_width="@dimen/ts_22"
                    android:layout_height="@dimen/ts_22" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/ts_68dp"
                android:text="进入直播"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_13"
                android:gravity="center"
                android:background="@drawable/login_btn_enable_bg"
                android:layout_height="@dimen/ts_32" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>