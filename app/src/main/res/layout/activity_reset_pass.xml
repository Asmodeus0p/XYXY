<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:layout_height="@dimen/ts_44">

        <TextView
            android:id="@+id/resetpass_aty_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/cancle_bg_style" />


        <TextView
            android:layout_width="wrap_content"
            android:text="重置密码"
            android:textSize="@dimen/ts_16"
            android:layout_centerInParent="true"
            android:textColor="#2C272D"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.jiyun.asmodeus.xyxy.view.ui.MyScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/ts_116"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/resetpass_aty_et"
                        android:layout_width="match_parent"
                        style="@style/login_logout_input"
                        android:maxLength="16"
                        android:password="true"
                        android:hint="请输入新密码"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/ts_280"
                    style="@style/login_line_style"
                    android:layout_marginTop="@dimen/ts_20"
                    android:layout_height="@dimen/ts_1" />


                <EditText
                    android:id="@+id/resetpass_aty_rp_et"
                    android:layout_width="match_parent"
                    style="@style/login_logout_input"
                    android:password="true"
                    android:maxLength="16"
                    android:layout_marginTop="@dimen/ts_30"
                    android:hint="请确认新密码"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="@dimen/ts_280"
                    style="@style/login_line_style"
                    android:layout_marginTop="@dimen/ts_20"
                    android:layout_height="@dimen/ts_1" />

                <Button
                    android:id="@+id/resetpass_aty_loginbtn"
                    android:layout_width="@dimen/ts_280"
                    android:text="完成"
                    android:textSize="@dimen/ts_16"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/ts_68dp"
                    android:background="@drawable/login_btn_enable_bg"
                    android:layout_height="@dimen/ts_48" />
            </LinearLayout>

        </RelativeLayout>

    </com.jiyun.asmodeus.xyxy.view.ui.MyScrollView>


</LinearLayout>