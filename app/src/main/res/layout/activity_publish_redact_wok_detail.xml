<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/publishredactwok_detail_group"
    tools:context=".view.fragment.workactivity.PublishRedactWokDetailActivity">
    <RelativeLayout
        android:id="@+id/publishredacthwok_detail_title_group"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/ts_44">

        <TextView
            android:id="@+id/publishredactwokdetail_cancle"
            android:layout_width="wrap_content"
            android:text="取消"
            android:layout_marginLeft="@dimen/ts_12"
            android:gravity="center"
            android:textSize="@dimen/ts_16"
            android:layout_height="match_parent" />


        <TextView
            android:layout_width="wrap_content"
            android:text="发布课程作业"
            style="@style/listui_title_style"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="@dimen/ts_22"
                    android:layout_marginRight="@dimen/ts_12"
                    android:visibility="gone"
                    android:background="@mipmap/home_master_search"
                    android:layout_height="@dimen/ts_22" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/ts_1" />
    </RelativeLayout>


    <TextView
        android:id="@+id/publishredactwok_detail_coachbtn"
        android:layout_width="match_parent"
        android:background="@color/blue_arlt"
        android:layout_alignParentBottom="true"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_14"
        android:gravity="center"
        android:layout_height="@dimen/ts_48" />

    <com.jiyun.asmodeus.xyxy.view.ui.MyScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/publishredacthwok_detail_title_group"
        android:layout_above="@id/publishredactwok_detail_coachbtn"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_height="@dimen/ts_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="@dimen/ts_84">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/ts_12"
                    android:layout_marginRight="@dimen/ts_12"
                    android:layout_marginTop="@dimen/ts_16"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="专业 : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/ts_16"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/publishredactwok_detail_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/ts_8"
                    android:layout_marginLeft="@dimen/ts_12"
                    android:layout_height="wrap_content"
                    ></android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_height="@dimen/ts_10" />


            <RelativeLayout
                android:id="@+id/publishredacetwok_detail_select_teacher"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_54">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_16"
                        android:text="名师 :"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/publishredactwok_detail_teahcername_tv"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_16"
                        android:textColor="@color/red_arlt"
                        android:layout_marginLeft="@dimen/ts_12"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/publishredactwok_detail_teahcerhint_tv"
                        android:layout_width="wrap_content"
                        android:text="不指定"
                        android:textColor="@color/login_close_c"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/ts_12"
                        android:src="@mipmap/redactwok_right_arrow"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_height="@dimen/ts_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_172">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="作品 :"
                    android:textSize="@dimen/ts_16"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/publishredactwok_detail_add_group"
                    android:layout_width="@dimen/ts_250"
                    android:layout_marginLeft="@dimen/ts_10"
                    android:background="@drawable/button_gray_bg"
                    android:layout_height="@dimen/ts_140">

                    <ImageView
                        android:id="@+id/publishredactwok_detail_img"
                        android:layout_width="@dimen/ts_250"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/ts_140" />


                    <LinearLayout
                        android:id="@+id/publishredactwok_detail_genghuan_group"
                        android:layout_width="match_parent"
                        android:background="#66000000"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:gravity="bottom"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/publishredactwok_detail_genghuan_btn"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:padding="@dimen/ts_8"
                            android:visibility="gone"
                            android:background="@drawable/button_black_bg"
                            android:gravity="center_vertical"
                            android:layout_marginRight="@dimen/ts_12"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/ts_14"
                                android:src="@mipmap/genghuan_label"
                                android:layout_height="@dimen/ts_14" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:text="更换"
                                android:layout_marginLeft="@dimen/ts_8"
                                android:textColor="@color/white"
                                android:textSize="@dimen/ts_12"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                        <ProgressBar
                            android:id="@+id/publishredact_progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:maxHeight="5dp"
                            android:minHeight="5dp"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/progress_bar_bg"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/publishredactwok_detail_play_music_group"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:paddingTop="@dimen/ts_78"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/publishredactwok_detail_play_music"
                            android:layout_width="@dimen/ts_20"
                            android:src="@drawable/play_music_bg"
                            android:visibility="visible"
                            android:layout_height="@dimen/ts_20" />

                        <TextView
                            android:id="@+id/publishredactwok_detail_play_music_time"
                            android:layout_width="wrap_content"
                            android:textColor="@color/blue_arlt"
                            android:textSize="@dimen/ts_12"
                            android:layout_marginTop="@dimen/ts_5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/publishredactwok_detail_play_video_group"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/ts_38"
                            android:src="@mipmap/play"
                            android:layout_height="@dimen/ts_38" />


                        <TextView
                            android:id="@+id/publishredactwok_detail_play_video_time"
                            android:layout_width="wrap_content"
                            android:textColor="@color/blue_arlt"
                            android:textSize="@dimen/ts_12"
                            android:layout_marginTop="@dimen/ts_5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/publishredactwok_detail_add_btn"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/ts_38"
                            android:src="@mipmap/publishwok_add"
                            android:layout_height="@dimen/ts_38" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="添加视频/音频/图片"
                            android:layout_marginTop="@dimen/ts_10"
                            android:textColor="@color/login_close_c"
                            android:textSize="@dimen/ts_14"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_height="@dimen/ts_10" />


            <EditText
                android:id="@+id/publishredactwok_detail_input"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:minLines="5"
                android:textSize="@dimen/ts_14"
                android:textColor="@color/login_close_c"
                android:gravity="top"
                android:hint="请输入作业内容"
                android:layout_margin="@dimen/ts_12"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_height="@dimen/ts_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_69">

                <LinearLayout
                    android:id="@+id/publishredactwok_detail_selecttype"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/ts_4"
                    android:paddingBottom="@dimen/ts_4"
                    android:paddingLeft="@dimen/ts_8"
                    android:paddingRight="@dimen/ts_8"
                    android:background="@drawable/select_type_blue_bg_active"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/publishredactwok_detail_select_tv"
                        android:layout_width="wrap_content"
                        android:text="对所有人公开"
                        android:textSize="@dimen/ts_14"
                        android:textColor="@color/blue_arlt"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="@dimen/ts_12"
                        android:layout_marginLeft="@dimen/ts_8"
                        android:src="@mipmap/publishwok_up_arrow"
                        android:layout_height="@dimen/ts_7" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/yellow_arlt"
                        android:textSize="@dimen/ts_14"
                        android:text="费用  ￥"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/publishredactwok_detail_price"
                        android:layout_width="wrap_content"
                        android:textColor="@color/yellow_arlt"
                        android:textSize="@dimen/ts_16"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </com.jiyun.asmodeus.xyxy.view.ui.MyScrollView>

    <RelativeLayout
        android:id="@+id/publishredactwok_detail_pushload"
        android:layout_width="match_parent"
        android:background="#99333333"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="35dp" />

    </RelativeLayout>


</RelativeLayout>