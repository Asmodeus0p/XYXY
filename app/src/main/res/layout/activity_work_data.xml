                            android:layout_marginLeft="@dimen/ts_12"
                            android:layout_marginRight="@dimen/ts_12"
                            android:layout_alignParentBottom="true"
                            android:layout_height="1dp"/>

                    </RelativeLayout>


                    <!--花钱偷看之后-->

                    <RelativeLayout
