                                        android:id="@+id/wok_detail_aty_pay_teacher_audio_gorpu"
                                        android:layout_width="wrap_content"
                                        android:visibility="gone"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/wok_detail_aty_pay_teacher_active_img"
                                            android:layout_width="120dp"
                                            android:src="@mipmap/audio_play_die_bg"
                                            android:layout_marginTop="@dimen/ts_3"
                                            android:layout_marginLeft="@dimen/ts_20"
                                            android:visibility="visible"
