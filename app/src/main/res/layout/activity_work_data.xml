                                        android:id="@+id/wok_detail_aty_pay_teacher_content"
                                        android:textSize="@dimen/ts_18"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/wok_detail_aty_pay_teacher_contentintro"
                                        android:textSize="@dimen/ts_18"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <RelativeLayout
