<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingRight="@dimen/ts_8"
    android:paddingLeft="@dimen/ts_8"
    android:paddingBottom="@dimen/ts_16"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/home_master_live_bg"
        android:layout_height="@dimen/ts_72">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/ts_10"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/master_detail_livelist_item_title"
                android:textColor="#EC6D14"
                android:textSize="@dimen/ts_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/ts_4"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/master_detail_livelist_item_time"
                    android:textColor="@color/login_close_c"
                    android:textSize="@dimen/ts_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/master_detail_livelist_item_location"
                    android:textColor="@color/login_close_c"
                    android:textSize="@dimen/ts_12"
                    android:layout_marginLeft="@dimen/ts_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/ts_80"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ts_9"
            android:background="@mipmap/masterdetail_live_bg"
            android:layout_height="@dimen/ts_59">

            <TextView
                android:id="@+id/master_detail_livelist_item_type"
                android:layout_marginTop="@dimen/ts_4"
                android:layout_width="wrap_content"
                android:textColor="@color/blue_arlt"
                android:textSize="@dimen/ts_13"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>