<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/home_masterwork_list_item_group"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/ts_15"
        android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_height="wrap_content">



                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/home_masterwork_listitem_studentimg"
                    android:layout_width="@dimen/ts_40"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/ts_40" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/ts_10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_masterwork_listitem_studentname"
                        android:textSize="@dimen/ts_16"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/ts_6"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/home_masterwork_listitem_time"
                            android:textSize="@dimen/ts_14"
                            android:layout_width="wrap_content"
                            android:textColor="#999999"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="@dimen/ts_14"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:text="来自"
                            android:layout_marginLeft="@dimen/ts_10"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/home_masterwork_listitem_from"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/ts_14"
                            android:textColor="#535353"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/ts_16"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/home_masterwork_listitem_content"
                            android:textSize="@dimen/ts_18"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/home_masterwork_listitem_contentintro"
                            android:textSize="@dimen/ts_18"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/home_masterwork_listitem_introimg_group"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/ts_10"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/home_masterwork_listitem_introimg"
                            android:layout_width="wrap_content"
                            android:maxWidth="@dimen/ts_236"
                            android:maxHeight="236dp"
                            android:scaleType="fitStart"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/home_masterwork_listitem_audioimg"
                            android:layout_width="@dimen/ts_236"
                            android:src="@mipmap/play_music_bg"
                            android:visibility="gone"
                            android:layout_height="@dimen/ts_132" />

                        <RelativeLayout
                            android:id="@+id/home_masterwork_listitem_audio_gorpu"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/home_masterwork_listitem_audio_time"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/ts_12"
                                android:layout_marginTop="@dimen/ts_72"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/ts_33"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/home_masterwork_listitem_video_gorpu"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/ts_38"
                                android:src="@mipmap/play"
                                android:layout_height="@dimen/ts_38" />

                            <TextView
                                android:id="@+id/home_masterwork_listitem_video_time"
                                android:layout_marginTop="@dimen/ts_10"
                                android:textSize="@dimen/ts_14"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/ts_8"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/ts_16"
                            android:src="@mipmap/label_flag"
                            android:layout_height="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/home_masterwork_listitem_worktype"
                            android:textSize="@dimen/ts_13"
                            android:layout_marginLeft="@dimen/ts_8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    
                </LinearLayout>

            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/ts_8"
            android:background="#f6f6f6"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/home_masterwork_listitem_teacher_group"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/ts_6"
            android:layout_marginBottom="@dimen/ts_6"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/ts_14"
                android:src="@mipmap/comment"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_height="@dimen/ts_14" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ts_13"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/home_masterwork_listitem_teacherimg"
                    android:layout_width="@dimen/ts_40"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/ts_40" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/ts_10"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/home_masterwork_listitem_teachername"
                        android:textColor="#ec6d14"
                        android:textSize="@dimen/ts_16"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/home_masterwork_listitem_teacherlevel"
                        android:layout_width="@dimen/ts_22"
                        android:layout_height="@dimen/ts_22" />
                </LinearLayout>

                <TextView
                    android:id="@+id/home_masterwork_listitem_teacherintro"
                    android:textSize="@dimen/ts_14"
                    android:textColor="#999999"
                    android:layout_marginTop="@dimen/ts_3"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_masterwork_listview_item_peep"
                android:layout_width="@dimen/ts_100"
                android:background="@drawable/look_group_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_32">

                <TextView
                    android:id="@+id/home_masterwork_listview_item_peep_price"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="@dimen/ts_16"
                    android:src="@mipmap/play_small"
                    android:layout_marginLeft="@dimen/ts_6"
                    android:layout_height="@dimen/ts_16" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/home_masterwork_listitem_teacher_group_line"
            android:layout_width="match_parent"
            android:background="#f6f6f6"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_36">

            <LinearLayout
                android:id="@+id/home_masterwork_list_item_reply_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_masterwork_list_item_reply_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/reply_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/reply_check_tv_bg"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_masterwork_list_item_praise_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_masterwork_list_item_praise_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/praise_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/praise_check_tv_bg"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_masterwork_list_item_reward_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_masterwork_list_item_reward_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/reward_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/reward_check_tv_bg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_masterwork_list_item_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/share_default"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#eeeeee"
            android:layout_height="@dimen/ts_10">
        </LinearLayout>

    </LinearLayout>
</LinearLayout>