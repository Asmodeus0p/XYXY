<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.MingShiFragment">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/home_master_fragment_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6">

        <com.jiyun.asmodeus.xyxy.view.ui.MyScrollView
            android:id="@+id/home_master_fragment_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.recker.flybanner.FlyBanner

                    android:id="@+id/home_master_adv_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts_180" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts_101">

                    <LinearLayout
                        android:id="@+id/home_master_find_group"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/ts_50"
                            android:layout_height="@dimen/ts_40"
                            android:src="@mipmap/home_master_find_shape" />

                        <TextView
                            style="@style/home_shape_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="找老师" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_master_look_group"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/ts_50"
                            android:layout_height="@dimen/ts_40"
                            android:src="@mipmap/home_master_look_shape" />

                        <TextView
                            style="@style/home_shape_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线上课" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_master_work_group"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/ts_50"
                            android:layout_height="@dimen/ts_40"
                            android:src="@mipmap/home_master_work_shape" />

                        <TextView
                            style="@style/home_shape_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="交作业" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_master_chat_group"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/ts_50"
                            android:layout_height="@dimen/ts_40"
                            android:src="@mipmap/home_master_chat_shape" />

                        <TextView
                            style="@style/home_shape_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="聊艺考" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_master_learn_group"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/ts_50"
                            android:layout_height="@dimen/ts_40"
                            android:src="@mipmap/home_master_learn_shape" />

                        <TextView
                            style="@style/home_shape_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线下课" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jiyun.asmodeus.xyxy.view.ui.MyListView
                        android:id="@+id/home_master_live_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/ts_16"
                        android:divider="@color/transparent"
                        android:dividerHeight="1px"
                        android:listSelector="@color/transparent"
                        android:scrollbars="none"></com.jiyun.asmodeus.xyxy.view.ui.MyListView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ts_18"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/ts_5"
                                android:layout_height="@dimen/ts_12"
                                android:src="@mipmap/rectangle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ts_20"
                                android:layout_marginRight="@dimen/ts_20"
                                android:text="名师推荐"
                                android:textColor="@color/black"
                                android:textSize="@dimen/ts_16" />

                            <ImageView
                                android:layout_width="@dimen/ts_5"
                                android:layout_height="@dimen/ts_12"
                                android:src="@mipmap/rectangle" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/homne_master_recommend_more"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/ts_22"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/ts_10"
                            android:gravity="bottom"
                            android:text="更多" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/homne_master_recommend_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ts_90"
                        android:layout_marginTop="@dimen/ts_16" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ts_18"
                    android:gravity="center_horizontal"
                    android:minHeight="@dimen/ts_150"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/ts_5"
                                android:layout_height="@dimen/ts_12"
                                android:src="@mipmap/rectangle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ts_20"
                                android:layout_marginRight="@dimen/ts_20"
                                android:text="课程推荐"
                                android:textColor="@color/black"
                                android:textSize="@dimen/ts_16" />

                            <ImageView
                                android:layout_width="@dimen/ts_5"
                                android:layout_height="@dimen/ts_12"
                                android:src="@mipmap/rectangle" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/home_master_live_more"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/ts_22"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/ts_10"
                            android:gravity="bottom"
                            android:text="更多" />
                    </RelativeLayout>


                    <com.jiyun.asmodeus.xyxy.view.ui.MyGridView
                        android:id="@+id/home_master_live_gridview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ts_16"
                        android:divider="@color/transparent"
                        android:dividerHeight="1px"
                        android:listSelector="@color/transparent"
                        android:numColumns="2"
                        android:scrollbars="none"></com.jiyun.asmodeus.xyxy.view.ui.MyGridView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ts_18"
                    android:minHeight="@dimen/ts_150"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/ts_5"
                                android:layout_height="@dimen/ts_12"
                                android:src="@mipmap/rectangle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ts_20"
                                android:layout_marginRight="@dimen/ts_20"
                                android:text="推荐作业"
                                android:textColor="@color/black"
                                android:textSize="@dimen/ts_16" />

                            <ImageView
                                android:layout_width="@dimen/ts_5"
                                android:layout_height="@dimen/ts_12"
                                android:src="@mipmap/rectangle" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/home_master_fragment_workmore"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/ts_22"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/ts_10"
                            android:gravity="bottom"
                            android:text="更多" />
                    </RelativeLayout>


                    <com.jiyun.asmodeus.xyxy.view.ui.MyListView
                        android:id="@+id/home_master_work_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="@color/transparent"
                        android:divider="@color/transparent"
                        android:dividerHeight="1px"
                        android:fadingEdge="none"
                        android:scrollbars="none"></com.jiyun.asmodeus.xyxy.view.ui.MyListView>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/home_master_fragment_chatvaluable"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ts_44"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一起聊艺考，更多精彩等你来发现"
                        android:textColor="#5491FF"
                        android:textSize="@dimen/ts_14" />

                </RelativeLayout>

            </LinearLayout>

        </com.jiyun.asmodeus.xyxy.view.ui.MyScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>