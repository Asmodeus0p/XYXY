<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/publishredact_bottom_pushvideo"
            android:layout_width="match_parent"
            android:text="上传视频"
            android:textSize="@dimen/ts_16"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_height="@dimen/ts_44" />
        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_height="@dimen/ts_1" />

        <TextView
            android:id="@+id/publishredact_bottom_redactvideo"
            android:layout_width="match_parent"
            android:text="直接录影"
            android:textSize="@dimen/ts_16"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_height="@dimen/ts_44" />
        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_height="@dimen/ts_1" />

        <TextView
            android:id="@+id/publishredact_bottom_redactvoice"
            android:layout_width="match_parent"
            android:text="直接录音"
            android:textSize="@dimen/ts_16"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_height="@dimen/ts_44" />
        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_height="@dimen/ts_1" />

        <TextView
            android:id="@+id/publishredact_bottom_pushphoto"
            android:layout_width="match_parent"
            android:text="上传照片"
            android:textSize="@dimen/ts_16"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_height="@dimen/ts_44" />
        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_height="@dimen/ts_1" />

        <TextView
            android:id="@+id/publishredact_bottom_redactphoto"
            android:layout_width="match_parent"
            android:text="直接拍照"
            android:textSize="@dimen/ts_16"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_height="@dimen/ts_44" />
        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_height="@dimen/ts_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/ts_15"
            android:layout_height="@dimen/ts_59">
            <Button
                android:id="@+id/publishredact_bottom_cancle"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ts_15"
                android:layout_marginRight="@dimen/ts_15"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_13"
                android:gravity="center"
                android:background="@drawable/button_white_bg"
                android:text="取消" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>