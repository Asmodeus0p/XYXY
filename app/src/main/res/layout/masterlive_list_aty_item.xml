<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_202">


            <ImageView
                android:id="@+id/masterlive_list_aty_item_img"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/masterlive_list_aty_item_type"
                android:layout_width="wrap_content"
                android:background="@drawable/flag_trans_bg"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/ts_14"
                android:gravity="center"
                android:paddingLeft="@dimen/ts_8"
                android:paddingRight="@dimen/ts_8"
                android:paddingTop="@dimen/ts_4"
                android:paddingBottom="@dimen/ts_4"
                android:layout_marginTop="@dimen/ts_12"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_alignParentTop="true"
                android:layout_height="@dimen/ts_30" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#66000000"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/ts_26">

                <TextView
                    android:layout_marginLeft="@dimen/ts_12"
                    android:layout_width="wrap_content"
                    android:text="开课时间 :"
                    android:textSize="@dimen/ts_13"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/masterlive_list_aty_item_time"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_13"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/ts_8"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_marginTop="@dimen/ts_12"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/masterlive_list_aty_item_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/masterlive_list_aty_item_usertype"
                    android:layout_width="@dimen/ts_22"
                    android:layout_height="@dimen/ts_22" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/masterlive_list_aty_item_majorIds"
                    android:layout_width="wrap_content"
                    android:background="@drawable/usermajor_select_item_normal_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/ts_8"
                    android:paddingRight="@dimen/ts_8"
                    android:textSize="@dimen/ts_10"
                    android:layout_marginRight="@dimen/ts_8"
                    android:layout_height="@dimen/ts_16" />

                <TextView
                    android:id="@+id/masterlive_list_aty_item_flag"
                    android:layout_width="wrap_content"
                    android:background="@drawable/usermajor_select_item_normal_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/ts_8"
                    android:paddingRight="@dimen/ts_8"
                    android:textSize="@dimen/ts_10"
                    android:textColor="@color/blue_arlt"
                    android:layout_height="@dimen/ts_16" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/ts_14"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="已预约:"
                    android:textSize="@dimen/ts_12"
                    android:textColor="#999999"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/masterlive_list_aty_item_yuyue"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/ts_8"
                    android:textSize="@dimen/ts_12"
                    android:textColor="#999999"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/ts_12"
                android:gravity="bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="¥"
                    android:textSize="@dimen/ts_14"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/masterlive_list_aty_item_price"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_24"
                    android:layout_marginLeft="@dimen/ts_5"
                    android:textColor="#FFD235"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:visibility="visible"
            android:layout_height="@dimen/ts_1" />

        <TextView
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="@dimen/ts_9" />

        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:visibility="visible"
            android:layout_height="@dimen/ts_1" />

    </LinearLayout>

</LinearLayout>