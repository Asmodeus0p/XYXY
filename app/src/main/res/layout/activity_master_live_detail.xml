<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/masterlivedetail_aty_group"
    tools:context=".view.fragment.homeactivity.MasterLiveDetailActivity">

    <LinearLayout
        android:id="@+id/masterlivedetail_coachbtn"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/ts_48" >

        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_height="@dimen/ts_1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/masterlivedetail_favorites_group"
                android:layout_width="@dimen/ts_94"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/masterlivedetail_favorites"
                    android:layout_width="wrap_content"
                    android:button="@drawable/collect_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textColor="@drawable/detailpraise_check_tv_bg"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/masterlivedetail_subscribe_group"
                android:layout_width="match_parent"
                android:background="@drawable/detail_status_btn"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/masterlivedetail_subscribe_btn"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/ts_8"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <com.jiyun.asmodeus.xyxy.view.ui.MyScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_above="@id/masterlivedetail_coachbtn"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            tools:ignore="WebViewLayout"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ts_202">

                <ImageView
                    android:id="@+id/masterlivedetail_img"
                    android:layout_width="match_parent"
                    android:src="@mipmap/home_master_viewpagr_normal"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/ts_202" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#66000000"
                    android:layout_height="@dimen/ts_27">

                    <TextView
                        android:id="@+id/masterlivedetail_livestatus_tv"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_12"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/ts_12"
                        android:paddingLeft="@dimen/ts_4"
                        android:paddingRight="@dimen/ts_4"
                        android:background="@drawable/masterdetail_live_flag"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/ts_12"
                        android:layout_alignParentRight="true"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/masterlivedetail_type_tv"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/ts_12"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_14"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/masterlivedetail_time_tv"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_14"
                            android:layout_marginLeft="@dimen/ts_4"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="@dimen/ts_80">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/ts_12"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ts_12"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/masterlivedetail_major_tv"
                        android:layout_width="wrap_content"
                        android:background="@drawable/usermajor_select_item_normal_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/ts_8"
                        android:paddingRight="@dimen/ts_8"
                        android:textSize="@dimen/ts_10"
                        android:layout_marginRight="@dimen/ts_8"
                        android:layout_height="@dimen/ts_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:background="@drawable/usermajor_select_item_normal_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/ts_8"
                        android:text="名师讲堂"
                        android:paddingRight="@dimen/ts_8"
                        android:textSize="@dimen/ts_10"
                        android:textColor="@color/blue_arlt"
                        android:layout_height="@dimen/ts_16" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/ts_14"
                    android:layout_marginLeft="@dimen/ts_12"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="已预约:"
                            android:textSize="@dimen/ts_12"
                            android:textColor="#999999"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/masterlivedetail_subscribe_tv"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/ts_8"
                            android:textSize="@dimen/ts_12"
                            android:textColor="#999999"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/ts_12"
                        android:gravity="bottom"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="¥"
                            android:textSize="@dimen/ts_14"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/masterlivedetail_price_tv"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/ts_24"
                            android:layout_marginLeft="@dimen/ts_5"
                            android:textColor="#FFD235"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_height="@dimen/ts_1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_80">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/masterlivedetail_teacherimg"
                    android:layout_width="@dimen/ts_40"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/ts_40" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/ts_14"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/masterlivedetail_name_tv"
                                android:textSize="@dimen/ts_16"
                                android:textColor="#EC6D14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/masterlivedetail_usertype_tv"
                                android:layout_width="@dimen/ts_22"
                                android:layout_height="@dimen/ts_22" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/masterlivedetail_title_tv"
                            android:textColor="#999999"
                            android:textSize="@dimen/ts_14"
                            android:layout_marginTop="@dimen/ts_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/masterlivedetail_attention_tv"
                        android:layout_width="@dimen/ts_60"
                        android:background="@drawable/detail_guanzhu_bg"
                        android:text="关注"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@drawable/detail_guanzhu_tv_bg"
                        android:layout_height="@dimen/ts_28" />


                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                style="@style/login_line_style"
                android:layout_height="@dimen/ts_1" />
            <WebView
                android:id="@+id/masterlivedetail_aty_webview"
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content">
            </WebView>

        </LinearLayout>

    </com.jiyun.asmodeus.xyxy.view.ui.MyScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:gravity="center_vertical"
        android:layout_height="@dimen/ts_44">

        <ImageView
            android:id="@+id/masterlivedetail_cancle"
            android:layout_width="@dimen/ts_32"
            android:src="@mipmap/detail_back"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_height="@dimen/ts_32" />


        <ImageView
            android:id="@+id/masterlivedetail_aty_share"
            android:layout_width="@dimen/ts_32"
            android:src="@mipmap/detail_share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_height="@dimen/ts_32" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/masterlivedetail_frame"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

    </FrameLayout>
</RelativeLayout>