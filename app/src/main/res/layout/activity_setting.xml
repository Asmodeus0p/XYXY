<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:layout_height="@dimen/ts_44">

        <TextView
            android:id="@+id/setting_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/cancle_bg_style" />

        <TextView
            android:layout_width="wrap_content"
            android:text="设置"
            android:textSize="@dimen/ts_18"
            android:textColor="@color/blue_arlt"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/login_line_style"
        android:layout_height="@dimen/ts_1" />
    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="@dimen/ts_10" />


    <RelativeLayout
        android:id="@+id/setting_aty_changephone_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_height="@dimen/ts_48">


        <TextView
            android:layout_width="wrap_content"
            android:text="换绑手机"
            android:layout_centerVertical="true"
            style="@style/home_myself_list_tv_style"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/setting_aty_phone_tv"
                android:layout_width="wrap_content"
                android:textSize="@dimen/ts_12"
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ts_18"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="@dimen/ts_7"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_12" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/login_line_style"
        android:layout_height="@dimen/ts_1" />

    <RelativeLayout
        android:id="@+id/setting_aty_bind_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_height="@dimen/ts_48">


        <TextView
            android:layout_width="wrap_content"
            android:text="社交账号绑定"
            android:layout_centerVertical="true"
            style="@style/home_myself_list_tv_style"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/ts_12"
                android:text="绑定/解绑"
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ts_18"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="@dimen/ts_7"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_12" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        style="@style/login_line_style"
        android:layout_height="@dimen/ts_1" />

    <RelativeLayout
        android:id="@+id/setting_aty_pass_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_height="@dimen/ts_48">


        <TextView
            android:layout_width="wrap_content"
            android:text="登录密码"
            android:layout_centerVertical="true"
            style="@style/home_myself_list_tv_style"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/ts_12"
                android:textColor="@color/gray"
                android:text="修改"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ts_18"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="@dimen/ts_7"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_12" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="@dimen/ts_10" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_height="@dimen/ts_48">


        <TextView
            android:layout_width="wrap_content"
            android:text="清空缓存"
            android:layout_centerVertical="true"
            style="@style/home_myself_list_tv_style"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/setting_glide_cahce_tv"
                android:layout_width="wrap_content"
                android:textSize="@dimen/ts_12"
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ts_18"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="@dimen/ts_7"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_12" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="@dimen/ts_10" />

    <RelativeLayout
        android:id="@+id/setting_aty_about_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_height="@dimen/ts_48">


        <TextView
            android:layout_width="wrap_content"
            android:text="关于UnivStar"
            android:layout_centerVertical="true"
            style="@style/home_myself_list_tv_style"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="@dimen/ts_7"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_12" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/setting_aty_tuichu_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ts_12"
        android:layout_height="@dimen/ts_48">


        <TextView
            android:layout_width="wrap_content"
            android:text="退出登录"
            android:layout_centerVertical="true"
            style="@style/home_myself_list_tv_style"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="@dimen/ts_7"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_height="@dimen/ts_12" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="match_parent" />


</LinearLayout>