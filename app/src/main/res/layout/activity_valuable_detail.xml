<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/valuable_detail_aty_group"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/valuable_detail_aty_title_group"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ts_26"
        android:layout_height="@dimen/ts_44">

        <TextView
            android:id="@+id/valuable_detail_aty_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/cancle_bg_style" />

        <TextView
            android:layout_width="wrap_content"
            android:text="艺考圈详情"
            android:textSize="@dimen/ts_18"
            android:textColor="@color/blue_arlt"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/valuable_detail_aty_more"
            android:layout_width="@dimen/ts_22"
            android:src="@mipmap/more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ts_10"
            android:layout_height="@dimen/ts_22" />

        <TextView
            android:layout_width="match_parent"
            style="@style/login_line_style"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/ts_1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/valuable_detail_aty_loadview"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="35dp" />

    </RelativeLayout>


    <com.xyxy.artlive_android.customview.MyScrollView
        android:id="@+id/valuable_detail_aty_scrollview"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/valuable_detail_aty_contentview"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/ts_15"
                    android:layout_marginLeft="@dimen/ts_12"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/valuable_detail_aty_img"
                        android:layout_width="@dimen/ts_40"
                        app:riv_oval="true"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/ts_40" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/ts_10"
                        android:paddingBottom="@dimen/ts_10"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginRight="@dimen/ts_12"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/valuable_detail_aty_name"
                                android:textSize="@dimen/ts_16"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/valuable_detail_aty_contenttype"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:background="@drawable/valuable_listitem_type_bg"
                                android:layout_centerVertical="true"
                                android:textColor="@color/blue_arlt"
                                android:paddingLeft="@dimen/ts_10"
                                android:paddingRight="@dimen/ts_10"
                                android:gravity="center"
                                android:textSize="@dimen/ts_12"
                                android:layout_height="@dimen/ts_24" />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/valuable_detail_aty_time"
                            android:textSize="@dimen/ts_14"
                            android:layout_width="wrap_content"
                            android:textColor="#999999"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/ts_16"
                            android:layout_marginRight="@dimen/ts_12"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/valuable_detail_aty_title"
                                android:textSize="@dimen/ts_18"
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/valuable_detail_aty_content"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/ts_14"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/ts_8"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/ts_10"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/valuable_detail_aty_contentimg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="fitStart" />


                            <RelativeLayout
                                android:id="@+id/valuable_detail_aty_audio_gorpu"
                                android:layout_width="wrap_content"
                                android:visibility="gone"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/valuable_detail_aty_audio_active_img"
                                    android:layout_width="120dp"
                                    android:src="@mipmap/audio_play_die_bg"
                                    android:layout_marginTop="@dimen/ts_3"
                                    android:layout_marginLeft="@dimen/ts_20"
                                    android:visibility="visible"
                                    android:layout_height="120dp" />

                                <ImageView
                                    android:id="@+id/valuable_detail_aty_audio_gan_img"
                                    android:layout_width="wrap_content"
                                    android:src="@mipmap/audio_play_gan_bg"
                                    android:layout_toRightOf="@id/valuable_detail_aty_audio_active_img"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/valuable_detail_aty_audio_time"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/ts_12"
                                    android:layout_marginTop="@dimen/ts_60"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/ts_20"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>


                            <LinearLayout
                                android:id="@+id/valuable_detail_aty_video_gorpu"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="@dimen/ts_38"
                                    android:src="@mipmap/play"
                                    android:layout_height="@dimen/ts_38" />

                                <TextView
                                    android:id="@+id/valuable_detail_aty_video_time"
                                    android:layout_marginTop="@dimen/ts_10"
                                    android:textSize="@dimen/ts_14"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>



                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/ts_8"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/ts_16"
                                android:src="@mipmap/label_flag"
                                android:layout_height="@dimen/ts_16" />

                            <TextView
                                android:id="@+id/valuable_detail_aty_worktype"
                                android:textSize="@dimen/ts_14"
                                android:layout_marginLeft="@dimen/ts_8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:background="#f6f6f6"
                    android:layout_marginLeft="@dimen/ts_12"
                    android:layout_marginRight="@dimen/ts_12"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="@dimen/ts_108">

                    <TextView
                        android:id="@+id/valuable_detail_aty_dashang"
                        android:layout_width="@dimen/ts_80"
                        android:background="@drawable/detail_dashang_bg"
                        android:text="赞赏"
                        android:textSize="@dimen/ts_14"
                        android:layout_marginTop="@dimen/ts_10"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="@dimen/ts_32" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/valuable_detail_aty_dashangRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/ts_10"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#F6F6F6"
                        android:layout_height="@dimen/ts_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/ts_18"
                        android:orientation="vertical"
                        android:layout_height="@dimen/ts_44">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/ts_10"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="@dimen/ts_5"
                                    android:src="@mipmap/rectangle"
                                    android:layout_height="@dimen/ts_12" />

                                <TextView
                                    android:textSize="@dimen/ts_16"
                                    android:textColor="@color/black"
                                    android:text="热门评论"
                                    android:layout_marginLeft="@dimen/ts_20"
                                    android:layout_marginRight="@dimen/ts_20"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:layout_width="@dimen/ts_5"
                                    android:src="@mipmap/rectangle"
                                    android:layout_height="@dimen/ts_12" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


                <com.xyxy.artlive_android.customview.MyListView
                    android:id="@+id/valuable_detail_aty_listview"
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:cacheColorHint="@color/transparent"
                    android:divider="@color/transparent"
                    android:dividerHeight="1px"
                    android:fadingEdge="none"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                </com.xyxy.artlive_android.customview.MyListView>


                <RelativeLayout
                    android:id="@+id/valuable_detail_aty_listview_empty_group"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/ts_132">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="77dp"
                            android:src="@mipmap/detail_no_comment"
                            android:layout_height="51dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="还没有人发言呢！"
                            android:layout_marginTop="@dimen/ts_12"
                            android:textColor="@color/gray"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:background="#F6F6F6"
                        android:layout_alignParentBottom="true"
                        android:layout_height="@dimen/ts_10" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/valuable_detail_aty_listview_loadmore"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:textColor="#2C272D"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="查看更多评论"
                    android:textSize="@dimen/ts_14"
                    android:layout_height="@dimen/ts_44" />

            </LinearLayout>
        </LinearLayout>


    </com.xyxy.artlive_android.customview.MyScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray_fa"
        android:visibility="visible"
        android:layout_height="50dp">


        <RelativeLayout
            android:id="@+id/valuable_detail_aty_input_group"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/ts_50">

            <TextView
                android:id="@+id/valuable_detail_aty_input_btn"
                android:layout_width="@dimen/ts_200"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_centerVertical="true"
                android:text="写评论"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ts_20"
                android:background="@drawable/home_search_bg"
                android:layout_height="@dimen/ts_32" />



            <RelativeLayout
                android:id="@+id/valuable_detail_aty_praise_group"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ts_16"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/valuable_detail_aty_praise_btn"
                    android:layout_width="wrap_content"
                    android:background="@drawable/work_detail_praise_bg"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/valuable_detail_aty_praise_num"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/ts_12"
                    android:layout_marginLeft="-6dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/valuable_detail_aty_praise_btn"
                    android:textColor="@color/blue_arlt"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/valuable_detail_aty_comment_group"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/valuable_detail_aty_praise_group"
                android:paddingTop="@dimen/ts_5"
                android:gravity="center"
                android:layout_marginRight="@dimen/ts_20"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/valuable_detail_aty_comment_btn"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/work_detail_comment"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/valuable_detail_aty_comment_num"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/ts_12"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="-8dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/valuable_detail_aty_comment_btn"
                    android:textColor="@color/blue_arlt"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <CheckBox
                android:id="@+id/valuable_detail_aty_collect_cb"
                android:layout_width="wrap_content"
                android:button="@drawable/collect_check_bg"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ts_20"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/valuable_detail_aty_comment_group"
                android:checked="false"
                android:paddingLeft="@dimen/ts_8"
                android:textColor="@drawable/praise_check_tv_bg"/>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/valuable_detail_aty_pinglun_input_group"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/ts_50">

            <Button
                android:id="@+id/valuable_detail_aty_pinglun_send"
                android:layout_width="80dp"
                android:background="@color/blue_arlt"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/ts_14"
                android:text="发送"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="36dp" />

            <EditText
                android:id="@+id/valuable_detail_aty_pinglun_input"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ts_15"
                android:layout_toLeftOf="@id/valuable_detail_aty_pinglun_send"
                android:layout_marginRight="@dimen/ts_15"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:hint="说点什么..."
                android:maxLength="250"
                android:paddingLeft="@dimen/ts_5"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/black"
                android:paddingRight="@dimen/ts_5"
                android:textSize="@dimen/ts_14"
                android:background="@drawable/button_white_bg"
                android:layout_height="36dp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>